{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "commonjs",
    "target": "ES5",
    "jsx": "react",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
